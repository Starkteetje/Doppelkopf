<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:background="@color/table_header_background" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.12"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:id="@+id/fragment_game_round_view_table_round_nr"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/table_header_text"
                android:text="@string/str_round_number"
                android:ellipsize="marquee"
                android:singleLine="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/table_header_hl" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.175"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:id="@+id/fragment_game_round_view_table_player_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/table_header_text"
                android:lines="1" />

            <View
                android:id="@+id/fragment_game_round_view_table_player_1_color"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/table_header_hl" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.182"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:id="@+id/fragment_game_round_view_table_player_2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/table_header_text"
                android:lines="1" />

            <View
                android:id="@+id/fragment_game_round_view_table_player_2_color"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/table_header_hl" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.182"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:id="@+id/fragment_game_round_view_table_player_3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/table_header_text"
                android:lines="1" />

            <View
                android:id="@+id/fragment_game_round_view_table_player_3_color"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/table_header_hl" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.182"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:id="@+id/fragment_game_round_view_table_player_4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/table_header_text"
                android:lines="1" />

            <View
                android:id="@+id/fragment_game_round_view_table_player_4_color"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/table_header_hl" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.165"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:id="@+id/fragment_game_round_view_table_round_points"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/table_header_text"
                android:text="@string/str_game_points"
                android:lines="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/table_header_hl" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>