<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:layout_marginTop="5dp"
    android:weightSum="1.0">


    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:id="@+id/player_entry"
        android:weightSum="1.0">

        <View
            android:id="@+id/player_color"
            android:layout_height="fill_parent"
            android:layout_width="@dimen/player_color_dim" />


        <AutoCompleteTextView
            android:padding="10dp"
            android:layout_weight="0.4"
            android:layout_marginLeft="@dimen/item_space"
            android:layout_marginRight="@dimen/item_space"
            android:id="@+id/player_entry_game_result_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:ems="10"
            android:gravity="center_vertical|left"
            android:hint="@string/str_player_name"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            android:popupBackground="@color/activity_background_color"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:clickable="false"
            android:enabled="false"
            android:maxLines="1">
        </AutoCompleteTextView>


        <TextView
            android:id="@+id/player_entry_game_result_name_points"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:lines="1"
            android:text=""
            android:textStyle="normal"
            android:layout_weight="0.2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray_dark"
            android:lines="1"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:text="Ã—" />

        <TextView
            android:id="@+id/player_entry_game_result_factor"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:text=""
            android:layout_weight="0.15"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray_dark" />

        <TextView
            android:id="@+id/player_entry_game_result_final_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </LinearLayout>



</LinearLayout>