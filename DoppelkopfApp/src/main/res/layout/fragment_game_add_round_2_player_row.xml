<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/game_add_round_player_left"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/add_round_player_background"
        android:layout_weight="0.5">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/game_add_round_playercolor_left"
                    android:layout_width="@dimen/player_color_dim"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="1dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/game_add_round_playername_left"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="l"
                    android:layout_margin="2dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/game_add_round_player_left_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/str_game_points_lose_select_text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/layer_game_add_player_lose"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_add_round_player_right"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/add_round_player_background"
        android:layout_marginLeft="2dp"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.7">

                <View
                    android:id="@+id/game_add_round_playercolor_right"
                    android:layout_width="@dimen/player_color_dim"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/game_add_round_playername_right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="r"
                    android:layout_margin="2dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/game_add_round_player_right_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/str_game_points_lose_select_text"
                    android:background="@drawable/layer_game_add_player_lose"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>